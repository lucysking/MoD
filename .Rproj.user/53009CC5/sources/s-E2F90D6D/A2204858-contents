    paste0(a_p_names, "_trim3_sev")
  ) %>% 
  bind_cols(a_p3, .) 
```

```{r}
# merge pregnancy and trimester severity ratings with master data frame and compute summed scores
a <-
  a %>% 
  left_join(
    a_p %>% 
      select(id, ends_with("_preg_sev")), by = "id"
  ) %>% 
  left_join(
    a_p1 %>% 
      select(id, ends_with("_trim1_sev")), by = "id"
  ) %>% 
  left_join(
    a_p2 %>% 
      select(id, ends_with("_trim2_sev")), by = "id"
  ) %>% 
  left_join(
    a_p3 %>% 
      select(id, ends_with("_trim3_sev")), by = "id"
  )
```

```{r}
preg_sev_ratings <-
