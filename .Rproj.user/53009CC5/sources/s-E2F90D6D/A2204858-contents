```{r}
preg_types <-
  a %>% 
  select(ends_with("_preg")) %>% 
  names()

trim1_types <-
  a %>% 
  select(ends_with("_trim___1")) %>% 
  names()

trim2_types <-
  a %>% 
  select(ends_with("_trim___2")) %>% 
  names()

trim3_types <-
  a %>% 
  select(ends_with("_trim___3")) %>% 
  names()
```

```{r}
a <-
  a %>% 
  mutate(
    preg_num_types = 
      pmap_dbl(
      select(., all_of(preg_types)),
      function(...) sum(c(...), na.rm = TRUE)
    ),
    preg_trim1_num_types = 
      pmap_dbl(
      select(., all_of(trim1_types)),
      function(...) sum(c(...), na.rm = TRUE)
    ),
    preg_trim2_num_types = 
      pmap_dbl(
      select(., all_of(trim2_types)),
      function(...) sum(c(...), na.rm = TRUE)
    ),
    preg_trim3_num_types = 
      pmap_dbl(
      select(., all_of(trim3_types)),
      function(...) sum(c(...), na.rm = TRUE)
    )
  )
```

```{r}
a %>% 
  select(
    preg_num_types:preg_trim3_num_types
  ) %>% 
  pivot_longer(preg_num_types:preg_trim3_num_types) %>% 
  ggplot(aes(value)) +
  geom_histogram(binwidth = 1) +
  facet_wrap(.~name, scales = "free")
```
 
# Total subjective severity of adversities during pregnancy and by trimester
```{r}
# select names of severity ratings for events that could have occurred during pregnancy 
sev_preg <-
  a %>% 
  select(ends_with("_preg")) %>% 
  rename_all(
    ~str_replace(., "_preg", "_sev")
  ) %>% 
  names()
```

```{r}
# create a data frame of just the events and severity ratings that could have during pregnancy
a_p <-
  a %>% 
  select(id, all_of(preg_types), all_of(sev_preg))

# select names of of events that could have occurred during pregnancy
a_p_names <- 
  a_p %>% 
  select(preg_types) %>% 
  rename_all(
    ~str_replace(., "_preg", "")
  ) %>% 
  names()

# use map to multiply event columns by severity columns that match the prefix value (i.e., the event type); if event did not happen during pregnancy, product will be 0 
# then name these new product columns and add to the data frame 
a_p <- 
  a_p_names %>% 
  map(
    ~a_p %>% 
      select(matches(.x)) %>%
      reduce(`*`)) %>%
  set_names(
    paste0(a_p_names, "_preg_sev")
  ) %>% 
  bind_cols(a_p, .) 
```

```{r}
# repeat for first trimester 
a_p1 <-
  a %>% 
  select(id, all_of(trim1_types), all_of(sev_preg))

a_p1 <- 
  a_p_names %>% 
  map(
    ~a_p1 %>% 
      select(matches(.x)) %>%
      reduce(`*`)) %>%
  set_names(
    paste0(a_p_names, "_trim1_sev")
